<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
       android:id="@+id/registerLayout"
       >

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >


           <TextView
               android:layout_width="145dp"
               android:layout_height="wrap_content"
               android:gravity="left"
               android:paddingTop="15dp"
               android:text="@string/ime"
               android:textSize="17dp"
               android:textStyle="bold"
               android:textColor="#FFFF"
               android:background="@color/colorPrimaryDark"
               android:textAlignment="center"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp"
               >

           </TextView>

           <EditText
               android:layout_width="150dp"
               android:layout_height="40dp"
               android:layout_gravity="left"
               android:id="@+id/imeKorisnika"
               android:layout_marginLeft="10dp"
               android:ems="15"
            >

           </EditText>

           <TextView
               android:layout_width="145dp"
               android:layout_height="wrap_content"
               android:gravity="left"
               android:paddingTop="15dp"
               android:text="@string/prezime"
               android:textSize="17dp"
               android:textStyle="bold"
               android:textColor="#FFFF"
               android:background="@color/colorPrimaryDark"
               android:textAlignment="center"
               android:layout_marginLeft="10dp"
               >

           </TextView>

           <EditText
               android:layout_width="150dp"
               android:layout_height="40dp"
               android:layout_gravity="left"
               android:id="@+id/prezimeKorisnika"
               android:layout_marginLeft="10dp"
               android:ems="15"
               >

           </EditText>

           <TextView
               android:layout_width="145dp"
               android:layout_height="wrap_content"
               android:gravity="left"
               android:paddingTop="15dp"
               android:text="@string/korisnicko_ime"
               android:textSize="17dp"
               android:textStyle="bold"
               android:textColor="#FFFF"
               android:background="@color/colorPrimaryDark"
               android:textAlignment="center"
               android:layout_marginLeft="10dp"
               >

           </TextView>

           <EditText
               android:layout_width="150dp"
               android:layout_height="40dp"
               android:layout_gravity="left"
               android:id="@+id/korImeKorisnika"
               android:layout_marginLeft="10dp"
               android:ems="15"
               >

           </EditText>

           <TextView
               android:layout_width="145dp"
               android:layout_height="wrap_content"
               android:paddingTop="15dp"
               android:gravity="left"
               android:text="@string/loznika"
               android:textSize="17dp"
               android:textStyle="bold"
               android:textColor="#FFFF"
               android:background="@color/colorPrimaryDark"
               android:textAlignment="center"
               android:layout_marginLeft="10dp"
               >

           </TextView>

           <EditText
               android:layout_width="150dp"
               android:layout_height="40dp"
               android:layout_gravity="left"
               android:id="@+id/loznikaKorisnika"
               android:inputType="textPassword"
               android:layout_marginLeft="10dp"
               android:ems="15"
               >

           </EditText>
       </LinearLayout>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:paddingLeft="65dp"
           >

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingTop="90dp"
               >

           </TextView>

           <Button
               android:layout_width="140dp"
               android:layout_height="wrap_content"
               android:text="Registruj se"
               android:id="@+id/registrujSe"
               android:background="@drawable/button_background"
               android:textColor="#FFFF"
               >

           </Button>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingTop="20dp"
               >

           </TextView>

           <Button
               android:layout_width="140dp"
               android:layout_height="wrap_content"
               android:text="Odustani"
               android:id="@+id/odustani"
               android:background="@drawable/button_background"
               android:textColor="#FFFF"
               >
           </Button>

       </LinearLayout>


   </LinearLayout>

</FrameLayout>